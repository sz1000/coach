.swiper-item {
  width: 100rpx;
  display: inline-block !important;
}

.swiper-box view {
  text-align: center;
}

.item {
  width: 100%;
  margin: 30rpx 0;
}

.title {
  font-family: "FZSuXSLSJW4";
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.storename {
  flex: 1;
}

.type {
  font-family: "FZSuXSLSJW4";
  flex: 1;
  font-size: 32rpx;
  line-height: 64rpx;
}

.status {
  font-size: 28rpx;
  color: #333;
  line-height: 64rpx;
}

.store {
  display: flex;
  font-size: 28rpx;
  line-height: 52rpx;
  color: #777;
}
.reserve_time {
  font-family: "FZSuXSLSJW14";
}

